<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Workstation.Workstation.WorkstationFragment">

    <GridView
        android:id="@+id/workstation_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:divider="@color/purple_200"
        android:horizontalSpacing="05dp"
        android:numColumns="3"
        android:padding="@dimen/fab_margin"
        android:stretchMode="columnWidth"
        android:textAlignment="viewStart"
        android:verticalSpacing="90dp"
        tools:listitem="@layout/list_workstation" />

</GridLayout>